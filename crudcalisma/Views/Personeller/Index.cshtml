@model IEnumerable<crudcalisma.Models.Tbl_Personeller>

@{
    ViewBag.Title = "Index";
}

<h2>PERSONEL LİSTESİ</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Ad</label>
        </th>
        <th>
            <label>Soyad</label>
        </th>
        <th>
            <label>Yaş</label>
        </th>
        <th>
            <label>Doğum Tarihi</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.personelad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.personelsoyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.personelyas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.personeldogumtarihi)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.personelid }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.personelid }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.personelid })
        </td>
    </tr>
}

</table>

@model crudcalisma.Models.Tbl_Personeller

@{
    ViewBag.Title = "Edit";
}

<h3>Düzenle</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.personelid)

        <div class="form-group">
            <label class="control-label col-md-2">Ad</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.personelad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.personelad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Soyad</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.personelsoyad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.personelsoyad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Yaş</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.personelyas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.personelyas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Doğum Tarihi</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.personeldogumtarihi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.personeldogumtarihi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
